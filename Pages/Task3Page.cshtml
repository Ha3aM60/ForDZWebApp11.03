@page
@model ForDZWebApp.Pages.Index1Model
@{
    ViewData["Title"] = "Restaurant Information";
}

<h1>@ViewData["Title"]</h1>

<p>Here you can find information about our restaurant.</p>

<ul class = "ul-style">
    @foreach (var restaurant in Model.restaurants )
{
    <li class = "li-style">@restaurant.Name - @restaurant.Address - @restaurant.Phone - <a href = "@restaurant.Website">@restaurant.Website</a> - @restaurant.HoursOfOperation</li>
}
</ul>

<style>
    .ul-style {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

.li-style {
  display: block;
  padding: 10px;
  margin-bottom: 5px;
  background-color: #f2f2f2;
  border-radius: 5px;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.li-style:hover {
  background-color: #ddd;
  transform: scale(1.05);
}
</style>